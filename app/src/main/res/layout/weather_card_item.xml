<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/space_x8"
    android:layout_marginVertical="@dimen/space_x8"
    app:cardCornerRadius="@dimen/space_x4"
    app:cardElevation="@dimen/space_x4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/space_x8">

        <TextView
            android:id="@+id/tvWeatherDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            tools:text="Today isaverylonglonglooongday" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ivWeatherIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_x4"
            tools:src="@drawable/abc_vector_test"
            tools:tint="@color/colorAccent" />

        <TextView
            android:id="@+id/tvWeatherDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            tools:text="Partly Cloudy aaaandanotherlongdescription" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:gravity="right"
            android:id="@+id/tvWeatherTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="17°-29°" />

    </LinearLayout>

</androidx.cardview.widget.CardView>